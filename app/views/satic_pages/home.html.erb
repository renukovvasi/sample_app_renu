<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
<body>
<h1>Home</h1>
<p>Sample Application </p>
<p>This is my Home Page for my app.
   You can refer: 
   <a href= "https//www.railstutorial.org">Ruby on Rails Tutoials</a>
</p>
 <p>New User?
 <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %></p>
</body>
</div>
 <%= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %>
<% end %>